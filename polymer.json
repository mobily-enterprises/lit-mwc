{
  "entrypoint": "tpe.html",
  "fragments": [
    "mixins/*",
    "*.js",
    "themes/**/*",
    "node_modules/lit-element/lit-element.js"
  ],
  "builds": [
    {
      "name": "esm-unbundled",
      "js": {
        "compile": "es5",
        "minify": true,
        "transformModulesToAmd": true
      },
      "css": {
        "minify": true
      },
      "html": {
        "minify": true
      },
      "bundle": false,
      "addServiceWorker": false
    }
  ],
  "moduleResolution": "node",
  "npm": true
}
